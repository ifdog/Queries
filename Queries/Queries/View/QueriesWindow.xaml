<Window x:Class="Queries.View.QueriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Queries"
        xmlns:usercontrol="clr-namespace:Queries.View.UserControl"
        xmlns:model="clr-namespace:Queries.ViewModel"
        xmlns:converter="clr-namespace:Queries.ViewModel.Converter"
        xmlns:base="clr-namespace:Queries.ViewModel.Base"
        mc:Ignorable="d"
        Title="Queries" Height="600" Width="800" MinWidth="400" MinHeight="300" WindowStartupLocation="CenterScreen"
        >
    <Window.DataContext>
        <model:QueriesViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="PagesTemplate" DataType="base:Function">
            <TextBlock Text="{Binding Name}" FontSize="16"/>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="0,0,0,0" Background="White" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid x:Name="DynGrid" Margin="156,10,10,35" Background="Honeydew">

        </Grid>
        <StatusBar Margin="65,0,10,5" Height="25" VerticalAlignment="Bottom" Background="Honeydew">
            <TextBlock x:Name="StatusTextBlock"  Text="TextBlock" Margin="0,0,0,0" Height="25" Width="84" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        </StatusBar>
        <ListBox x:Name="ListBox" SelectionMode="Single" HorizontalAlignment="Left" Margin="26,15,0,30" Width="100" 
                 ItemTemplate="{StaticResource PagesTemplate}" ItemsSource="{Binding Pages}" SelectionChanged="ListBox_SelectionChanged"/>
        <Button x:Name="Button" Content="菜单" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalAlignment="Bottom" Width="50" Height="25" Background="PaleGreen"/>
    </Grid>
</Window>
